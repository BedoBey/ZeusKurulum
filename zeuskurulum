	echo "1) Online (Güncelleme Sorgular)"
	echo "2) Offline (Güncelleme İstemiyorsaniz Seciniz)"
	echo "0) ÇIKIŞ"
	echo -e "\033[1;33m#                                                                 #\033[1;33m \033[0m"
	echo -e "\033[1;33m###################################################################\033[1;32m \033[0m"
	echo -n -e "\033[1;37mCevap: \033[0m"
read menu_cevap
case $menu_cevap in
 1)
 online
 ;;
 2)
offline
;;
0)
kapat
 ;;
*)
clear
echo -e "\033[1;33m###################################################################\033[1;32m \033[0m"
