function ana_temelbilesen(){
clear
echo "Temel bileşenler 3 saniye içinde kurulmaya başlayacak"
sleep 3

 if cat /etc/*release | grep ^NAME | grep CentOS; then
yum -y update
yum -y install screen
yum -y install java
yum -y install wget
yum -y install sudo
yum -y install nano
yum -y install unzip
sleep 1
sudo rpm --import http://li.nux.ro/download/nux/RPM-GPG-KEY-nux.ro
sudo rpm -Uvh http://li.nux.ro/download/nux/dextop/el7/x86_64/nux-dextop-release-0-5.el7.nux.noarch.rpm
sleep 1
yum install libopus-dev ffmpeg libc6-dev
yum python-pip
yum install mono-devel
yum update x11vnc xvfb libxcursor1 ca-certificates bzip2 libnss3 libegl1-mesa x11-xkb-utils libasound2 -y
yum install -y firefox xorg-x11-server-Xvfb x11vnc xinit xvfb libxcursor1 ca-certificates bzip2 curl libglib2.0-0 xorg-x11-server-Xorg vnc-server gnome-desktop xorg-x11-xinit xterm gnome-applets gnome-session gnome-themes gnome-panel gdm firefox dbus-x11 libstdc++-devel.i686 glibc-devel.i686
rm -rf /usr/local/bin/youtube-dl
cd /usr/local/bin
wget -q --no-check-certificate https://yt-dl.org/downloads/latest/youtube-dl
sudo chmod a+rx youtube-dl
cd /opt
mkdir sinusbot
cd /opt/sinusbot
mkdir ts3client
cd /opt/sinusbot/ts3client
wget -q --no-check-certificate https://$server/script/sinusbot/TeamSpeak3-Client-linux_amd64-3.1.10.run
echo -e "\033[1;32mİlk olarak \033[1;34mENTER \033[1;32mbasın \033[1;34mQ \033[1;32mbasın \033[1;34mY \033[1;32mbasın \033[1;34mENTER \033[1;32mbasın \033[0m" 
chmod +x TeamSpeak3-Client-linux_amd64-3.1.10.run
./TeamSpeak3-Client-linux_amd64-3.1.10.run
cd /usr/local/bin
mkdir temelbilesen-installed
 elif cat /etc/*release | grep ^NAME | grep Ubuntu; then
apt-get update -y
apt-get install wget -y
apt-get install sudo -y
apt-get install java
apt-get install nano
sudo apt install mono-devel
sleep 1
sudo rpm --import http://li.nux.ro/download/nux/RPM-GPG-KEY-nux.ro
sudo rpm -Uvh http://li.nux.ro/download/nux/dextop/el7/x86_64/nux-dextop-release-0-5.el7.nux.noarch.rpm
sleep 1
apt-get install libopus-dev ffmpeg libc6-dev
apt-get python-pip
sudo apt install x11vnc xvfb libxcursor1 ca-certificates bzip2 libnss3 libegl1-mesa x11-xkb-utils libasound2 -y
sudo update-ca-certificates -y
sudo apt-get install libglib2.0-0 -y 
sudo apt-get install screen -y
sudo apt-get install youtube-dl -y 
sudo youtube-dl --update 
rm -rf /usr/local/bin/youtube-dl
cd /usr/local/bin
wget -q --no-check-certificate https://yt-dl.org/downloads/latest/youtube-dl
sudo chmod a+rx youtube-dl
sudo apt-get install default-jre -y
sudo apt-get install openjdk-7-jre -y
sudo update-ca-certificates -y
sudo apt-get install lib32stdc++6 -y
sudo apt-get install lib32z1 -y
sudo apt-get install lib32ncursesw5 -y
wget -q --no-check-certificate http://ftp.us.debian.org/debian/pool/main/r/readline5/libreadline5_5.2-7_ia64.deb
dpkg -i libreadline5_5.2-7_ia64.deb
rm libreadline5_5.2-7_ia64.deb
apt-get install unzip -y
cd /opt
mkdir sinusbot
cd /opt/sinusbot
mkdir ts3client
cd /opt/sinusbot/ts3client
wget -q --no-check-certificate https://$server/script/sinusbot/TeamSpeak3-Client-linux_amd64-3.1.10.run
echo -e "\033[1;32mİlk olarak \033[1;34mENTER \033[1;32mbasın \033[1;34mQ \033[1;32mbasın \033[1;34mY \033[1;32mbasın \033[1;34mENTER \033[1;32mbasın \033[0m" 
cd /opt/sinusbot/ts3client
chmod +x TeamSpeak3-Client-linux_amd64-3.1.10.run
./TeamSpeak3-Client-linux_amd64-3.1.10.run
cd /usr/local/bin
mkdir temelbilesen-installed    
 elif cat /etc/*release | grep ^NAME | grep Debian ; then
apt-get update -y
apt-get install wget -y
apt-get install sudo -y
apt-get install java -y
apt-get install nano -y
sleep 1
sudo rpm --import http://li.nux.ro/download/nux/RPM-GPG-KEY-nux.ro
sudo rpm -Uvh http://li.nux.ro/download/nux/dextop/el7/x86_64/nux-dextop-release-0-5.el7.nux.noarch.rpm
sleep 1
sudo apt install mono-devel
apt-get install ffmpeg libc6-dev
apt-get install libopus-dev
apt-get python-pip
sudo apt install x11vnc xvfb libxcursor1 ca-certificates bzip2 libnss3 libegl1-mesa x11-xkb-utils libasound2 -y
sudo update-ca-certificates -y
sudo apt-get install libglib2.0-0 -y 
sudo apt-get install screen -y
sudo apt-get install youtube-dl -y 
sudo youtube-dl --update 
rm -rf /usr/local/bin/youtube-dl
cd /usr/local/bin
wget -q --no-check-certificate https://yt-dl.org/downloads/latest/youtube-dl
sudo chmod a+rx youtube-dl
sudo apt-get install default-jre -y
sudo apt-get install openjdk-7-jre -y
sudo update-ca-certificates -y
sudo apt-get install lib32stdc++6 -y
sudo apt-get install lib32z1 -y
sudo apt-get install lib32ncursesw5 -y
wget -q --no-check-certificate http://ftp.us.debian.org/debian/pool/main/r/readline5/libreadline5_5.2-7_ia64.deb
dpkg -i libreadline5_5.2-7_ia64.deb
rm libreadline5_5.2-7_ia64.deb
apt-get install unzip -y
cd /opt
mkdir sinusbot
cd /opt/sinusbot
mkdir ts3client
cd /opt/sinusbot/ts3client
wget -q --no-check-certificate https://$server/script/sinusbot/TeamSpeak3-Client-linux_amd64-3.1.10.run
echo -e "\033[1;32mİlk olarak \033[1;34mENTER \033[1;32mbasın \033[1;34mQ \033[1;32mbasın \033[1;34mY \033[1;32mbasın \033[1;34mENTER \033[1;32mbasın \033[0m" 
cd /opt/sinusbot/ts3client
chmod +x *
./TeamSpeak3-Client-linux_amd64-3.1.10.run
cd /usr/local/bin
mkdir temelbilesen-installed        
 else
    temelbilesen_sorun
 fi
echo -e "Temel bileşen kurulumu tamamlandı."


}
function ana_secenek_audiobot(){
clear

echo -e "\033[0;32m-------------------------------------------------------\033[0m"
echo -e "\033[0;32m#######################################################\033[0m"
echo -e "\033[0;32m#\033[0m                    \033[1;35mVersion: v$gsurum\033[0m                   \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m                \033[1;35mAudioBot - Seçenekler\033[0m                \033[0;32m#\033[0m"
echo -e "\033[0;32m#######################################################\033[0m"
echo -e "\033[0;32m#                   ||Seçenekler||                    #\033[0m"
echo -e "\033[0;32m#\033[0m                                                     \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m \033[1;37m\033[1;31m1\033[1;37m) \033[1;36mBaşlat                                           \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m \033[1;37m\033[1;31m2\033[1;37m) \033[1;36mDurdur                                           \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m \033[1;37m\033[1;31m3\033[1;37m) \033[1;36mSil                                              \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m \033[1;37m\033[1;31m4\033[1;37m) \033[1;36mİsim Değiştir                                    \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m \033[1;37m\033[1;31m0\033[1;37m) \033[1;36mAna Menü\033[0m                                         \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m                                                     \033[0;32m#\033[0m"
echo -e "\033[0;32m#######################################################\033[0m"
echo -e "\033[0;32m-------------------------------------------------------\033[0m"
echo -e ""
echo -n -e "\033[1;37mCevap: \033[0m"
read audiosec

case $audiosec in
 1)
ana_secenek_audiobot_baslat
 ;;
 2)
ana_secenek_audiobot_durdur 
 ;;
 3)
ana_secenek_audiobot_sil
 ;;
 4)
ana_secenek_audiobot_name
 ;;
 0)
ana_menu
 ;;
*)
clear
echo -e "\033[1;33m###################################################################\033[1;32m \033[0m"
echo -e "\033[1;33m#                                                                 #\033[1;32m \033[0m"
echo -e "\033[1;33m#                    \033[1;33mYanlış tuşlama yapıldı                 \033[0m      \033[1;33m# \033[0m"
