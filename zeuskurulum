function ana_secenek_audiobot_name(){
clear
cd /opt
rm -rf nportlaraudio.txt
touch /opt/nportlaraudio.txt
echo -e -n "\e[1;36mEski Bot İsmini Girin\e[0m: "
read -a audio4
echo -e -n "\e[1;36mYeni Bot İsmini Girin\e[0m: "
read -a audio44
case $audio4 in
0)
  ana_menu
  exit
  ;;
esac
for audio4 in ${audio4[@]}
do
echo $audio4 >> /opt/nportlaraudio.txt
audioname4=$audio4
if [ -d "/opt/audiobot/audio$audioname4" ]
then
cd /opt/audiobot/audio$audioname4
screen -X -S $audioname4 quit
cd /opt/audiobot/audio$audioname4/Bots
nohup sed -i "s@$audio4@$audio44@" bot_default.toml
echo -e "\033[1;37m(\033[1;34m$audioname4\033[1;37m) Botun İsmi Başarıyla Değiştirildi.\033[0m"
echo -e "\033[1;37m(\033[1;34m$audioname4\033[1;37m) Bot Yeniden Başlatılıyor.\033[0m"
sleep 0.5
mv /opt/audiobot/audio$audioname4 /opt/audiobot/audio$audio44
cd /opt/audiobot/audio$audio44
screen -AmdS $audio44 mono TS3AudioBot.exe
clear
echo -e "\033[1;37m(\033[1;34m$audioname4/$audio44\033[1;37m) Botu Başlatıldı.Yaklaş��k 30 saniye içinde Yeni İsmi İle Ts3'e Bağlanacaktır\033[0m"
else
echo -e "\033[1;37m(\033[1;34m$audioname4\033[1;37m) Botu kurulu değil.\033[0m"
fi
done < "/opt/nportlaraudio.txt"
rm -rf /opt/nportlaraudio.txt
sleep 2
echo -e "\033[0;32mAna menüye dönmek için enter'a basın"
read enterbom
case $enterbom in
  *)
  ana_menu
  ;;
esac
}
function ana_kurulum_audiobot(){
clear
if [ ! -d "/opt/audiobot/audiocopy" ] 
then
clear
echo -e "\033[1;33m###################################################################\033[1;32m \033[0m"
echo -e "\033[1;33m#                                                                 #\033[1;32m \033[0m"
echo -e "\033[1;33m#       \033[1;33mGerekli Dosyaların Yüklü Olmadığı Tespit Edildi.     \033[0m     \033[1;33m# \033[0m"
echo -e "\033[1;33m#                      \033[1;31mDosyalar Yükleniyor.                       \033[0m\033[1;33m# \033[0m"
echo -e "\033[1;33m#                                                                 #\033[1;33m \033[0m"
echo -e "\033[1;33m###################################################################\033[1;32m \033[0m"
sleep 3
mkdir /opt/audiobot
cd /opt/audiobot
mkdir audiocopy
cd audiocopy
wget -q --no-check-certificate https://$server/script/audio/audio.zip
unzip audio.zip
rm -rf audio.zip
clear
echo -e "\033[1;32mGerekli Dosyalar İndirildi Kurulum Tekrar Açılıyor.\033[0m"
sleep 1
ana_kurulum_audiobot
exit
fi
if [ ! -d "/usr/local/bin/temelbilesen-installed_audio" ] 
then
temelbilesen_audio
exit
fi
echo -e -n "\033[1;36mİsim Girin: \033[0m"
read audiobotname
sleep 0.5
if [ -d "/opt/audiobot/audio$audiobotname" ] 
then
clear
echo -e "\033[1;33m###################################################################\033[1;32m \033[0m"
echo -e "\033[1;33m#                                                                 #\033[1;32m \033[0m"
echo -e "\033[1;33m#          \033[1;33mYazdığınız bot ismi kurulmuş gözüküyor.        \033[0m        \033[1;33m# \033[0m"
echo -e "\033[1;33m#          \033[1;31mBaşka bir bot ismi ile kurmayı deneyin.                \033[0m\033[1;33m# \033[0m"
echo -e "\033[1;33m#                                                                 #\033[1;33m \033[0m"
echo -e "\033[1;33m###################################################################\033[1;32m \033[0m"
exit
fi
sleep 0.5
clear
echo -e "\033[1;35mNOT: \033[1;33mBotu Kullanacağınız Ts3 Adresi."
echo -e -n "\033[1;36mTeamspeak 3 Adresi Girin: \033[0m"
read audioip
sleep 0.5
echo -e -n "\033[1;36mTeamspeak 3 Portu Girin: \033[0m"
read audioport
sleep 0.5
echo -e -n "\033[1;36mSes Kalitesi (32-128): \033[0m"
read audioses
sleep 0.5
echo -e -n "\033[1;36mYetkili Unique İD Girin: \033[0m"
read audioid
sleep 0.5
echo -e -n "\033[1;36mYetki İD Girin (Botu Kullanmasını İstediğiniz Yetkinin İD'si): \033[0m"
read audioyid
sleep 0.5
clear
echo -e "\033[1;33mGerekli klasörler oluşturuluyor...\033[0m"
cd /opt/audiobot
cp -r audiocopy audio$audiobotname
echo -e "\033[1;32mGerekli klasörler oluşturuldu.\033[0m"
sleep 0.5
echo -e "\033[1;32mGerekli dosyaları indirildi.\033[0m"
sleep 0.5
echo -e "\033[1;33mDosyalar düzenleniyor...\033[0m"
cd /opt/audiobot/audio$audiobotname/Bots
nohup sed -i "s@botname@$audiobotname@" bot_default.toml
nohup sed -i "s@ts3ip@$audioip@" bot_default.toml
nohup sed -i "s@ts3port@$audioport@" bot_default.toml
nohup sed -i "s@ses@$audioses@" bot_default.toml
cd /opt/audiobot/audio$audiobotname
nohup sed -i "s@auidoid@$audioid@" rights.toml
nohup sed -i "s@audioyid@$audioyid@" rights.toml
clear
echo -e "\033[1;32mDosyalar düzenlendi.\033[0m"
sleep 1
cd /opt/audiobot/audio$audiobotname
screen -AmdS $audiobotname mono TS3AudioBot.exe
clear
echo -e "\033[1;32mBot kurulumu tamamlandı, ortalama 5 saniye içinde sunucunuza giriş yapacaktır !youtube müzik ismi yaparak müzik açabilirsiniz.\033[0m"
}

function ana_kurulum_jt3servermod(){
clear
echo -e "\033[1;35mNOT: \033[1;33mHer TeamSpeak3 Sunucusuna 1 adet JTS3ServerMod Botu Girebilir."
echo -e -n "\033[1;36mTeamSpeak3 Server Port (Örnek: 9987, 9988): \033[0m"
read botport
sleep 0.5
if [ -d "/opt/jts3servermod/bot$botport" ] 
then
clear
echo -e "\033[1;33m###################################################################\033[1;32m \033[0m"
echo -e "\033[1;33m#                                                                 #\033[1;32m \033[0m"
echo -e "\033[1;33m#          \033[1;33mYazdığınız port şuanda kurulmuş gözüküyor.     \033[0m        \033[1;33m# \033[0m"
echo -e "\033[1;33m#               \033[1;31mBaşka bir port kurmayı deneyin.                   \033[0m\033[1;33m# \033[0m"
echo -e "\033[1;33m#                                                                 #\033[1;33m \033[0m"
echo -e "\033[1;33m###################################################################\033[1;32m \033[0m"
exit
fi
sleep 0.5
clear
echo -e "\033[1;35mNOT: \033[1;33mLocalde kullanacaksanız adresi '127.0.0.1' olarak girin."
echo -e -n "\033[1;36mTs3 IP Adresi: \033[0m"
read botip
sleep 0.5
echo -e -n "\033[1;36mYatqa ServerQuery Şifresi: \033[0m"
read botpassquery
sleep 0.5
echo -e -n "\033[1;36mYatqa Query Port(Varsayılan: 10011): \033[0m"
read botqueryport
sleep 0.5
echo -e -n "\033[1;36mBotun adı: \033[0m"
read botname
sleep 0.5
echo -e -n "\033[1;36mBotun 2. adı: \033[0m"
read botname2
sleep 0.5
echo -e -n "\033[1;36mYetkili Unique ID: \033[0m"
read botuniqueid
clear
sleep 0.5
echo -e "\033[1;33mGerekli klasörler oluşturuluyor...\033[0m"
mkdir /opt/jts3servermod
cd /opt/jts3servermod
echo -e "\033[1;32mGerekli klasörler oluşturuldu.\033[0m"
sleep 0.5
echo -e "\033[1;33mBot dosyaları indiriliyor...\033[0m"
cd /opt/jts3servermod/ 
mkdir bot$botport
cd bot$botport
wget -q --no-check-certificate https://$server/script/jts3/bot.zip
unzip bot.zip
rm -rf bot.zip
echo -e "\033[1;32mBot dosyaları indirildi.\033[0m"
sleep 0.5
echo -e "\033[1;33mDosyalar düzenleniyor...\033[0m"
cd /opt/jts3servermod/bot$botport/config
nohup sed -i "s@ts3querypass@$botpassquery@" JTS3ServerMod_server.cfg
nohup sed -i "s@BOTADMIN@$botuniqueid@" JTS3ServerMod_InstanceManager.cfg
nohup sed -i "s@ts3address@$botip@" JTS3ServerMod_server.cfg
nohup sed -i "s@ts3query@$botqueryport@" JTS3ServerMod_server.cfg
nohup sed -i "s@ts3port@$botport@" JTS3ServerMod_server.cfg
nohup sed -i "s@BOTADI@$botname@" JTS3ServerMod_server.cfg
nohup sed -i "s@BOTADI2@$botname2@" JTS3ServerMod_server.cfg
mv JTS3ServerMod_server.cfg server1
echo -e "\033[1;32mDosyalar düzenlendi.\033[0m"
sleep 0.5
cd /opt/jts3servermod/bot$botport/
screen -d -m -S bot$botport java -mx30M -jar JTS3ServerMod.jar
clear
echo -e "\033[1;32mBot kurulumu tamamlandı,  sunucu sohbetinden !botinfo yazarak bota ulaşabilirsiniz.\033[0m"
}

