127.0.0.1 thawte.com
127.0.0.1 symcb.com
127.0.0.1 usertrust.com
127.0.0.1 elasticbeanstalk.com
127.0.0.1 reportpiracy-env.elasticbeanstalk.com
127.0.0.1 hardy.teamspeak.4players.de
127.0.0.1 ocsp.digicert.com
# 127.0.0.1 blacklist.teamspeak.com
127.0.0.1  teamspeak.com

" >> /etc/hosts;
sudo sh -c "echo 3 > /proc/sys/vm/drop_caches"
}

function ana_kurulum_teamspeak3yenisg(){
if [ ! -d "/root/server" ] 
then
clear
echo -n -e "\033[1;33mTeamSpeak3 3.8.0 sunucusu kurulacak Emin misin? \033[1;37m(\033[1;31my/n\033[1;37m): \033[0m"
read RESP
if [ "$RESP" = "y" ]; then
sleep 0.5
echo -e "\033[1;33mServer dosyaları indiriliyor...\033[0m"
sleep 0.1
ana_kurulum_teamspeak3_hostduzenle
sleep 0.1
cd /root
wget -q --no-check-certificate https://$server/script/ts3/teamspeak3-server_linux_ggsurum.zip
sleep 0.1
unzip teamspeak3-server_linux_ggsurum.zip
sleep 0.1
sudo rm -r teamspeak3-server_linux_ggsurum.zip
echo -e "\033[1;32mServer dosyaları indirildi.\033[0m"
sleep 0.5
mv teamspeak3-server_linux_ggsurum server
sleep 0.1
chmod +x *
sleep 0.1
cd /root/server
chmod 777 ts3server
chmod 777 ts3server_minimal_runscript.sh 
chmod 777 ts3server_startscript.sh
sleep 0.1
touch .ts3server_license_accepted
sleep 0.5
./ts3server_startscript.sh start createinifile=1    
exit
sleep 0.5
else
ana_kurulum
fi
else
clear
echo -e "\033[1;33mTeamSpeak3 sunucusu zaten kurulu!\033[0m"
sleep 2
fi
}

