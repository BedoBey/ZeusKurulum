function ana_secenek_audiobot_baslat(){
clear
cd /opt
rm -rf bportlaraudio.txt
touch /opt/bportlaraudio.txt
echo -e -n "\e[1;36mBaşlatmak İstediğiniz Botların İsmini Girin\e[0m: "
read -a audio1
case $audio1 in
0)
  ana_menu
  exit
  ;;
esac
for audio1 in ${audio1[@]}
do
echo $audio1 >> /opt/bportlaraudio.txt
audioname1=$audio1
if [ -d "/opt/audiobot/audio$audioname1" ]
then
cd /opt/audiobot/audio$audioname1
screen -AmdS $audioname1 mono TS3AudioBot.exe
echo -e "\033[1;37m(\033[1;34m$audioname1\033[1;37m) Botu başarıyla başlatıldı.\033[0m"
else
echo -e "\033[1;37m(\033[1;34m$audioname1\033[1;37m) Botu kurulu değil.\033[0m"
fi
done < "/opt/bportlaraudio.txt"
rm -rf /opt/bportlaraudio.txt
sleep 2
echo -e "\033[0;32mAna menüye dönmek için enter'a basın"
read enterbom
case $enterbom in
  *)
  ana_menu
  ;;
esac
}

