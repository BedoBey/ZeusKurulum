mavi="\033[1;36m"                #
kirmizi="\033[1;31m"             #
yesil="\033[0;32m"               #
f="\033[0m"                      #
mavik="\033[36m"                 #
##################################

scname="ZeusKurulum"
surum="10.5"
server="indirsc.tk"
tssurum="3.0.13.8"
gsurum="1.0.0"
gssurum="3.5.1"
ggssurum="3.8.0"
sinusbotsurum="Alpha"
jts3surum="5.5.4"
audiosurum="0.9.1"
main_server_connectionlost="\033[1;33mAna sunucuya bağlanamıyor,Lütfen Scripti Yeniden Başlatmayı Deneyin.\033[0m"

function ana_secenek_jts3servermod_baslat(){
clear
echo -e -n "\033[1;36mBaşlatmak İstediğiniz Port: \033[0m"
read botport
cd /opt/jts3servermod/bot$botport
screen -d -m -S bot$botport java -mx30M -jar JTS3ServerMod.jar
echo -e "\033[1;37m$botport ~ portlu JTS3ServerMod botu başlatıldı.\033[0m"
}

function ana_secenek_jts3servermod_durdur(){
clear
echo -e -n "\033[1;36mDurdurmak İstediğiniz Port: \033[0m"
read botport
screen -S bot$botport -X quit
echo -e "\033[1;37m$botport ~ portlu JTS3ServerMod botu durduruldu.\033[0m"
}

function ana_secenek_jts3servermod_ybaslat(){
clear
echo -e -n "\033[1;36mYeniden Başlatmak İstediğiniz Port: \033[0m"
read botport
screen -S bot$botport -X quit
cd /opt/jts3servermod/bot$botport
screen -d -m -S bot$botport java -mx30M -jar JTS3ServerMod.jar
echo -e "\033[1;37m$botport ~ portlu JTS3ServerMod botu yeniden başlatıldı.\033[0m"
}

function ana_secenek_jts3servermod_botsil(){
clear
echo -e -n "\033[1;36mSilmek İstediğiniz Port: \033[0m"
read botport
screen -S bot$botport -X quit
rm -rf /opt/jts3servermod/bot$botport
echo -e "\033[1;37m$botport ~ portlu JTS3ServerMod botu silindi.\033[0m"
}

function ana_secenek_jt3servermod(){
clear

echo -e "\033[0;32m-------------------------------------------------------\033[0m"
echo -e "\033[0;32m#######################################################\033[0m"
echo -e "\033[0;32m#\033[0m                    \033[1;35mVersion: v$gsurum\033[0m                   \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m             \033[1;35mJTS3ServerMod - Seçenekler\033[0m              \033[0;32m#\033[0m"
echo -e "\033[0;32m#######################################################\033[0m"
echo -e "\033[0;32m#                   ||Seçenekler||                    #\033[0m"
echo -e "\033[0;32m#\033[0m                                                     \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m \033[1;37m\033[1;31m1\033[1;37m) \033[1;36mBaşlat                                           \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m \033[1;37m\033[1;31m2\033[1;37m) \033[1;36mDurdur                                           \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m \033[1;37m\033[1;31m3\033[1;37m) \033[1;36mYeniden Başlat                                   \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m \033[1;37m\033[1;31m4\033[1;37m) \033[1;36mSil                                              \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m \033[1;37m\033[1;31m0\033[1;37m) \033[1;36mAna Menü\033[0m                                         \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m                                                     \033[0;32m#\033[0m"
echo -e "\033[0;32m#######################################################\033[0m"
echo -e "\033[0;32m-------------------------------------------------------\033[0m"
echo -e ""
echo -n -e "\033[1;37mCevap: \033[0m"
read jtssec

case $jtssec in
 1)
ana_secenek_jts3servermod_baslat
 ;;
 2)
ana_secenek_jts3servermod_durdur 
 ;;
 3)
ana_secenek_jts3servermod_ybaslat
 ;;
 4)
ana_secenek_jts3servermod_botsil
 ;;
 0)
ana_menu
 ;;
*)
clear
echo -e "\033[1;33m###################################################################\033[1;32m \033[0m"
echo -e "\033[1;33m#                                                                 #\033[1;32m \033[0m"
echo -e "\033[1;33m#                    \033[1;33mYanlış tuşlama yapıldı                 \033[0m      \033[1;33m# \033[0m"
echo -e "\033[1;33m#                \033[1;31mAna Menüye Yönlendiriliyorsunuz                  \033[0m\033[1;33m# \033[0m"
echo -e "\033[1;33m#                                                                 #\033[1;33m \033[0m"
echo -e "\033[1;33m###################################################################\033[1;32m \033[0m"
sleep 2
ana_menu
;;
esac

}

function temelbilesen_audio(){
clear
echo -e "\033[1;33m#########################################################\033[1;32m \033[0m"
echo -e "\033[1;33m#                                                       #\033[1;32m \033[0m"
echo -e "\033[1;33m#              \033[1;31mİşletim Sisteminizi Seçin                \033[0m\033[1;33m# \033[0m"
echo -e "\033[1;33m#                                                       #\033[1;33m \033[0m"
echo -e "\033[1;33m#########################################################\033[1;32m \033[0m"
echo -e ""
echo -e "\033[1;37m(\033[1;31m1\033[1;37m) \033[1;36mCentos\033[0m"
echo -e "\033[1;37m(\033[1;31m2\033[1;37m) \033[1;36mUbuntu\033[0m"
echo -e "\033[1;37m(\033[1;31m3\033[1;37m) \033[1;36mDebain\033[0m"
echo -e ""

echo -n -e "\033[1;37mCevap: \033[0m"
read updaaudio

case $updaaudio in



 1)
clear
rpm --import "https://keyserver.ubuntu.com/pks/lookup?op=get&search=0x3FA7E0328081BFF6A14DA29AA6A19B38D3D831EF"
su -c 'curl https://download.mono-project.com/repo/centos7-stable.repo | tee /etc/yum.repos.d/mono-centos7-stable.repo'
sudo yum install epel-release -y
sudo yum update -y
sleep 1
sudo rpm --import http://li.nux.ro/download/nux/RPM-GPG-KEY-nux.ro
sleep 1
sudo rpm -Uvh http://li.nux.ro/download/nux/dextop/el7/x86_64/nux-dextop-release-0-5.el7.nux.noarch.rpm
sudo yum update
sleep 1
yum install opus-devel
sleep 0.5
yum install -y mono-complete
sleep 1
yum install mono-devel
sleep 1
yum install ffmpeg
cd /usr/local/bin
mkdir temelbilesen-installed_audio
ana_kurulum_audiobot
;;




 2)
 clear
echo -e "\033[1;33m###################################################################\033[1;32m \033[0m"
echo -e "\033[1;33m#                                                                 #\033[1;32m \033[0m"
echo -e "\033[1;33m#                      \033[1;31mİşletim Sisteminizi Sürümü Seçin           \033[0m\033[1;33m# \033[0m"
echo -e "\033[1;33m#                                                                 #\033[1;33m \033[0m"
echo -e "\033[1;33m###################################################################\033[1;32m \033[0m"
echo -e ""
echo -e "\033[1;37m(\033[1;31m1\033[1;37m) \033[1;36mUbuntu 18.04\033[0m"
echo -e "\033[1;37m(\033[1;31m2\033[1;37m) \033[1;36mUbuntu 16.04\033[0m"
echo -e "\033[1;37m(\033[1;31m3\033[1;37m) \033[1;36mUbuntu 14.04\033[0m"
echo -e ""

echo -n -e "\033[1;37mCevap: \033[0m"
read updaaudioubuntu

case $updaaudioubuntu in
1)
sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 3FA7E0328081BFF6A14DA29AA6A19B38D3D831EF
echo "deb https://download.mono-project.com/repo/ubuntu stable-bionic main" | sudo tee /etc/apt/sources.list.d/mono-official-stable.list
sudo apt update
sleep 1
sudo apt-get install opus-devel
sleep 1
apt-get install mono-complete
cd /usr/local/bin
mkdir temelbilesen-installed_audio
ana_kurulum_audiobot
;;
2)
sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 3FA7E0328081BFF6A14DA29AA6A19B38D3D831EF
sudo apt install apt-transport-https
echo "deb https://download.mono-project.com/repo/ubuntu stable-xenial main" | sudo tee /etc/apt/sources.list.d/mono-official-stable.list
sudo apt update
sleep 1
sudo apt-get install opus-devel
sleep 1
apt-get install mono-complete
cd /usr/local/bin
mkdir temelbilesen-installed_audio
ana_kurulum_audiobot
;;
3)
sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 3FA7E0328081BFF6A14DA29AA6A19B38D3D831EF
sudo apt install apt-transport-https
echo "deb https://download.mono-project.com/repo/ubuntu stable-trusty main" | sudo tee /etc/apt/sources.list.d/mono-official-stable.list
sudo apt update
sleep 1
sudo apt-get install opus-devel
