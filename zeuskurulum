function online(){
clear
echo -e "\033[1;36m╔══════════════════════════════════════════════════════════╗\033[1;32m \033[0m"
sleep 0.5s
echo -e "\033[1;36m╠═══════════════> Bismillahirrahmanirrahim <═══════════════╣\033[1;32m \033[0m"
sleep 0.5s
echo -e "\033[1;36m╠══════════════════════════════════════════════════════════╣\033[1;32m \033[0m"
sleep 0.5s
echo -e "\033[1;36m╠>                      Sürüm : v1.0                      <╣\033[1;32m \033[0m"
sleep 0.5s
echo -e "\033[1;36m╠>               Site : www.zeuskurulum.tk                <╣\033[1;32m \033[0m"
sleep 0.5s
echo -e "\033[1;36m╠══════════════════════════════════════════════════════════╣\033[1;32m \033[0m"
sleep 0.5s
echo -e "\033[1;36m╠>                      GAMEDC.NET                        <╣\033[1;32m \033[0m"
sleep 0.5s
echo -e "\033[1;36m╠══════════════════════════════════════════════════════════╣\033[1;32m \033[0m"
sleep 0.5s
echo -e "\033[1;36m╠> Güncellemeler Kontrol Ediliyor                         <╣\033[1;32m \033[0m"
sleep 0.5s
echo -e "\033[1;36m╠══════════════════════════════════════════════════════════╣\033[1;32m \033[0m"
sleep 2s
if curl -N -4 -s --head --request POST http://zeuskurulum.tk | grep "200 OK" > /dev/null; 
then
tamam="1"
else
echo -e $main_server_connectionlost
sleep 2
./zeuskurulum
exit
fi


sleep 0.5s
echo -e "\033[1;36m╠> Sunucu Bağlantısı Başarılı                             <╣\033[1;32m \033[0m"
sleep 0.5s
echo -e "\033[1;36m╠══════════════════════════════════════════════════════════╣\033[1;32m \033[0m"


if [ "$(id -u)" != "0" ]; then
echo -e "\033[1;33m╠> Root Olarak Başlatılamadı Lütfen 'sudo su' komutuyla Başlatınız<╣\033[1;32m \033[0m"
sleep 0.5s
echo -e "\033[1;36m╠══════════════════════════════════════════════════════════╣\033[1;32m \033[0m"
   exit 1
fi


if curl -s https://zeuskurulum.tk/script/surumkontrol/guncel.php | grep "12.3"
then
clear
echo -e "\033[0;32m-------------------------------------------------------\033[0m"
echo -e "\033[0;32m#######################################################\033[0m"
echo -e "\033[0;32m#\033[0m                     \033[1;31m$scname\033[0m                     \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m                \033[1;37mwww.zeuskurulum.tk\033[0m                \033[0;32m#\033[0m"
echo -e "\033[0;32m#######################################################\033[0m"
echo -e "\033[0;32m#\033[0m                \033[1;35m! Güncelleme Mevcut !\033[0m                \033[0;32m#\033[0m"
echo -e "\033[0;32m#######################################################\033[0m"
echo -e "\033[0;32m#\033[0m                                                     \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m     \033[1;31mYeni Bir Güncelleme Mevcut\033[0m                      \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m     \033[1;37mGüncellemeler Otomatik Yüklenir                 \033[0;32m#\033[0m"
echo -e "\033[0;32m#\033[0m     \033[1;37m5 Saniye İçinde Güncelleme Başlayacaktır        \033[0;32m#\033[0m"
echo -e "\033[0;32m#######################################################\033[0m"
echo -e "\033[0;32m-------------------------------------------------------\033[0m"
sleep 5
sudo rm -r zeuskurulum
wget -q --no-check-certificate https://zeuskurulum.tk/scdosya/zeuskurulum
chmod 777 zeuskurulum
./zeuskurulum
exit 1 ./zeuskurulum
else
echo -e "\033[1;33m╠> Güncel Sürüm Kullanıyorsunuz.                          <╣\033[1;32m \033[0m"
sleep 0.5s
echo -e "\033[1;36m╚══════════════════════════════════════════════════════════╝\033[1;32m \033[0m"
sleep 0.5s
ana_menu
fi
}
